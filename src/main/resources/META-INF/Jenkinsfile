pipeline {
    agent any
    stages {
        stage('build') {
            agent{
                docker {image 'maven:3.3.3'}
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deployment') {
           steps{
              sh 'kubectl apply -f ${WORKSPACE}/src/main/resource/META-INF/k8s/shiro-action-deployment.yml'
           }
        }

    }

}