pipeline {
    agent any
    environment {
      appName="shiro-action"
      deployFileName="${appName}-deployment.yml"
    }
    stages {
        stage('build') {
            agent {
               docker {
               image 'maven:3.3.3'
               args '-v /root/.m2:/root/.m2 -v /home/shiro-action/:/home/shiro-action/'
               }
            }
            steps {
                sh 'mvn clean package'
                sh 'cp target/shiro-action-0.6.jar /home/shiro-action/shiro-action.jar'
            }
        }
        stage('deployment') {
           steps {
             script {
                def container= `'sh kubectl get pods |awk {print\"$1\"} |grep ${appName}'`
                if(container != ""){
                   sh 'kubectl delete -f ${WORKSPACE}/src/main/resources/META-INF/k8s/shiro-action-deployment.yml --ignore-not-found=true'
                   sh 'kubectl apply -f ${WORKSPACE}/src/main/resources/META-INF/k8s/shiro-action-deployment.yml'
                 }else{
                     sh 'kubectl apply -f ${WORKSPACE}/src/main/resources/META-INF/k8s/shiro-action-deployment.yml'
                 }
             }
           }
        }

    }

}