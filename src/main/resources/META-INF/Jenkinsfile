pipeline {
    agent {
       docker {
       image 'maven:3.3.3-alpine'
       args '-v /root/.m2:/root/.m2 /home/shiro-action/:/home/shiro-action/'
       }
    }
    stages {
        stage('build') {
            steps {
                sh 'mvn clean package'
                sh 'cp target/shiro-action-0.6.jar /home/shiro-action/shiro-action.jar'
            }
        }
        stage('deployment') {
           steps{
              sh 'kubectl apply -f ${WORKSPACE}/src/main/resources/META-INF/k8s/shiro-action-deployment.yml'
           }
        }

    }

}